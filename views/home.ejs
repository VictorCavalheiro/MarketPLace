<% include partials/header %>
<head>
  <link  rel="stylesheet" href="/stylesheets/home.css">
</head>
  
<div class="container">  
    <header class="jumbotron text-center">
        <div class="container">
            <% if(!currentUser){ %>
                <h1>The best!</h1>
             <% } else{ %>
                  <h2><%= currentUser.username %></h2>
                 
              <% } %>
           <% if(currentUser){ %>   
              <p>
                <a class="btn btn-primary btn-lg" href="/home/new">Add a new Ad!</a> 
              </p>
            <% } %>
        </div>
    </header>
  
    <div class="row" style="display:flex; flex-wrap:wrap;">
              <% ads.forEach(function(ad,index){%>
                <a class="ads" href="/">
                  <div class="col-md-3 col-sm-6">
                      <div class="thumbnail card " id ="card<%=index %>">
                        <img src="<%= ad.image %>" >
                          <div class="caption " >
                              <hr class="hr_home">
                              <h3 class="title"><%= ad.title %></h3>
                              <div class = "desc">
                                  <h4 class="price">US$ <%= ad.price %></h4>
                                  <p><%=ad.description%></p>
                                  <p><a></a></p>
                              </div>
                          </div>
                      </div>
                  </div>
                </a>
              <% }); %>
      </div>
</div>

<% include partials/footer %>